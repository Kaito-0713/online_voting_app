<div class="vote-complete-container my-5 text-center"> 
  <!-- ✅ 完了アイコン -->
  <div class="mb-4">
    <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #ea2a33;"></i>
  </div>

  <!-- ✅ 見出し -->
  <h1 class="fw-bold mb-3">投票が完了しました！</h1>

  <!-- ✅ 投票情報 -->
  <p class="text-muted mb-4">
    <strong><%= @election.title %></strong> に投票しました。<br>
    投票日時: <%= @vote.created_at.strftime("%Y/%m/%d %H:%M") %>
  </p>

  <!-- ✅ 候補者カード -->
  <div class="card shadow-lg mx-auto mb-4 vote-complete-card">
    <div class="card-body text-center">
      <% if @candidate.image.attached? %>
        <%= image_tag @candidate.image.variant(resize_to_limit: [350, 350]), 
                      class: "img-fluid rounded mb-3" %>
      <% end %>

      <h3 class="fw-bold mb-2 candidate-name"><%= @candidate.name %></h3>
      <p class="candidate-party">（<%= @candidate.party %>）</p>
    </div>
  </div>

  <!-- ✅ 選挙一覧へ戻るボタン -->
  <%= link_to "← ホームに戻る", root_path, 
              class: "btn btn-outline-danger mt-5 px-4 py-2 fw-bold" %>
</div>
