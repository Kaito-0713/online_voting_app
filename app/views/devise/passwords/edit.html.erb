<h2>新しいパスワードの設定</h2>

<p class="mb-3">
  新しいパスワードを入力してください。
</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "新しいパスワード", class: "form-label" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "ログイン画面に戻る", new_session_path(resource_name), class: "btn btn-secondary w-100" %>
</div>
