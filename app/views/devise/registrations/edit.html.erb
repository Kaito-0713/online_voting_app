<!-- app/views/devise/registrations/edit.html.erb -->

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- アカウント編集カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="card-title mb-4">アカウント情報を編集</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :name, "名前", class: "form-label" %>
              <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :identification_number, "本人確認用ID", class: "form-label" %>
              <%= f.text_field :identification_number, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :id_document, "本人確認書類", class: "form-label" %>
              <% if resource.id_document.attached? %>
                <p>現在のファイル: <%= link_to resource.id_document.filename, rails_blob_path(resource.id_document, disposition: "attachment") %></p>
              <% end %>
              <%= f.file_field :id_document, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "新しいパスワード", class: "form-label" %>
              <small class="text-muted">(変更しない場合は空欄のまま)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
              <small class="text-muted">(変更の確認のため必須)</small>
              <%= f.password_field :current_password, autocomplete: "current-password", required: true, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit "更新する", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- アカウント削除カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h3 class="card-title mb-3">アカウント削除</h3>
          <p class="text-muted mb-3">アカウントを削除すると、すべてのデータが永久に失われます。この操作は元に戻せません。</p>
          <div class="d-flex justify-content-end">
            <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>

      <!-- 戻るボタン -->
    <div class="text-center mt-5"> 
      <%= link_to "ホームに戻る", :back, class: "btn btn-outline-danger" %>
    </div>

    </div>
  </div>
</div>
