<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 420px; width: 100%;">
    <div class="text-center mb-4">
      <h2 class="fw-bold">ログイン</h2>
      <p class="text-muted small">国政選挙オンライン投票システムへようこそ</p>
    </div>

    <%= form_with model: resource, url: session_path(resource_name), local: true, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", required: true %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true %>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
        </div>
        <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "text-danger small" %>
      </div>

      <%= f.submit "ログイン", class: "btn btn-danger w-100" %>
    <% end %>

    <p class="text-center mt-3 small text-muted">
      アカウントをお持ちでないですか？
      <%= link_to "新規登録", new_registration_path(resource_name), class: "text-danger fw-bold" %>
    </p>
  </div>
</div>
