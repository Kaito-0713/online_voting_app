<h1 class="text-center mb-4 fw-bold"><%= @candidate.name %> の詳細</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card candidate-detail-card shadow-lg border-0 rounded-3 d-flex flex-column">
        <div class="row g-0 flex-grow-1">
          <!-- 左側：画像 -->
          <div class="col-md-5 d-flex">
            <% resized_path = "/images/candidates/candidate_#{@candidate.id}_resized.jpg" %>
            <% if File.exist?(Rails.root.join("public", "images", "candidates", "candidate_#{@candidate.id}_resized.jpg")) %>
              <%= image_tag resized_path, class: "img-fluid w-100 h-100 object-fit-cover rounded-start" %>
            <% else %>
              <%= image_tag "default_candidate.png", class: "img-fluid w-100 h-100 object-fit-cover rounded-start" %>
            <% end %>
          </div>

          <!-- 右側：候補者情報 -->
          <div class="col-md-7 d-flex flex-column justify-content-between">
            <div class="card-body">
              <p class="fw-bold mb-2 candidate-party"><%= @candidate.party %></p>
              <h2 class="card-title fw-bold text-dark"><%= @candidate.name %></h2>

              <% if @candidate.policy.present? %>
                <h5 class="mt-3 fw-bold text-secondary">政策紹介</h5>
                <p class="text-muted"><%= simple_format(@candidate.policy) %></p>
              <% end %>
            </div>

            <!-- 投票ボタン（小さめに、下部固定） -->
            <div class="card-footer bg-white border-0 text-center pb-3">
              <% if current_user && current_user.voted_for?(@election) %>
                <div class="alert alert-info mt-2">この選挙にはすでに投票済みです。</div>
              <% else %>
                <%= link_to "この候補者に投票する", 
                              new_election_vote_path(@election), 
                              class: "btn btn-danger px-4 py-2 fw-bold",
                              data: { turbo_confirm: "本当にこの候補者に投票しますか？"} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- 戻るボタンに余白を追加 -->
      <div class="text-center mt-5 mb-5">
        <%= link_to "← 候補者一覧に戻る", election_candidates_path(@election),
                    class: "btn btn-outline-danger px-4 fw-bold" %>
      </div>
    </div>
  </div>
</div>
