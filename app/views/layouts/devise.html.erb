<!DOCTYPE html>
<html>
  <head>
    <title>オンライン投票</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', "data-turbolinks-track": 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body class="bg-light">
    <header class="sticky-top shadow-sm border-bottom bg-white py-3 px-4 d-flex justify-content-between align-items-center">
      <%= link_to root_path, class: "d-flex align-items-center gap-2 text-decoration-none" do %>
        <%= image_tag "icon.png", alt: "Logo", style: "height:32px; width:32px; margin-right:8px;" %>
        <span class="fw-bold fs-4 text-dark">オンライン投票</span>
      <% end %>

      <nav class="d-flex align-items-center gap-4">
        <%= link_to "ログイン", new_session_path(resource_name), class: "devise-login-link" %>
        <%= link_to "新規登録", new_registration_path(resource_name), class: "devise-signup-btn" %>
      </nav>
    </header>

    <main class="mt-4">
      <%= yield %>
    </main>
  </body>
</html>
